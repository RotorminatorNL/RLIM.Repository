@{
    string controller = ViewContext.RouteData.Values["controller"].ToString();
    bool isAdminController = controller == "Category" ||
                                controller == "Platform" ||
                                controller == "Quality" ||
                                controller == "MainItem" ||
                                controller == "Certificate" ||
                                controller == "Color" ||
                                controller == "SubItem";

    if (controller == "Home")
    {
        Layout = "_Layout";
    }
    else if (isAdminController)
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_UserLayout";
    }
}
