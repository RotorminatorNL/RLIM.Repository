@model RLIM.UserInterface.Models.PlatformModel

@{
    ViewData["Title"] = "Delete Platform";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="form-container">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
        </tbody>
    </table>

    <form asp-controller="Platform" asp-action="Delete" class="form-group row justify-content-between">
        <input asp-for="ID" type="hidden" />
        <input asp-for="Name" type="hidden" />
        <input type="submit" value="Yes, I want to" class="btn btn-danger" />
        <a asp-controller="MainItem" asp-action="Attributes" class="btn btn-outline-primary">Back to List</a>
    </form>
</div>
