@model IEnumerable<RLIM.UI.Models.MainItemModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Category</th>
            <th>Platform</th>
            <th>Quality (rank | name)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Platform.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Quality.Rank) | @Html.DisplayFor(modelItem => item.Quality.Name)</td>
            <td></td>
        </tr>
        }
    </tbody>
</table>
