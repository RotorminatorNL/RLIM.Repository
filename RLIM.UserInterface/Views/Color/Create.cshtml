@model RLIM.UserInterface.Models.ColorModel

@{
    ViewData["Title"] = "Create Color";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="form-container">
    <form asp-controller="Color" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" value="@TempData["ColorName"]" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Hex" class="control-label"></label>
            <input asp-for="Hex" class="form-control" value="@TempData["ColorHex"]" />
            <span asp-validation-for="Hex" class="text-danger"></span>
        </div>

        <div class="form-group row justify-content-between">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-controller="SubItem" asp-action="Attributes" class="btn btn-outline-primary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
