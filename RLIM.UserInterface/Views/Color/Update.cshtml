@model RLIM.UserInterface.Models.ColorModel

@{
    ViewData["Title"] = "Update Color";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form asp-controller="Color" asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hex" class="control-label"></label>
        <input asp-for="Hex" class="form-control" />
        <span asp-validation-for="Hex" class="text-danger"></span>
    </div>

    <div class="form-group row justify-content-between">
        <input asp-for="ID" type="hidden" />
        <input type="submit" value="Save" class="btn btn-primary" />
        &nbsp;
        <a asp-controller="SubItem" asp-action="Attributes" class="btn btn-outline-primary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
