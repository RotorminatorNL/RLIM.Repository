@model IEnumerable<RLIM.UI.Models.CertificateModel>

@{
    RLIM.UI.Models.CertificateModel certificate = new RLIM.UI.Models.CertificateModel();
    ViewData["Title"] = "Get all Certificates";
}

<h1>Get all Certificates</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tier)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td></td>
            <td><a asp-action="Create" class="btn btn-primary">New Certificate</a></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="vertical-align: middle">
                    @Html.DisplayFor(modelItem => item.Tier)
                </td>
                <td>
                    <form asp-action="Update" style="display: inline-block">
                        <input asp-for="@item.Id" name="id" type="hidden" />
                        <input type="submit" value="Update" class="btn btn-warning" />
                    </form>
                    &nbsp;
                    <form asp-action="Delete" style="display: inline-block">
                        <input asp-for="@item.Id" name="id" type="hidden" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

