@model RLIM.UI.Models.ColorModel

@{
    ViewData["Title"] = "Update Color";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Color" asp-action="UpdateColor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Hex" class="control-label"></label>
                <input asp-for="Hex" class="form-control" />
                <span asp-validation-for="Hex" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ID" type="hidden" />
                <input type="submit" value="Save" class="btn btn-primary" />
                &nbsp;
                <a asp-controller="Color" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
